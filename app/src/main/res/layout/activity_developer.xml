<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80D388"
    android:weightSum="5"
    tools:context=".Developer">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/rony"
            android:layout_gravity="center_horizontal"
            android:layout_width="170dp"
            android:layout_height="170dp"/>
        <TextView
            android:text="Md Rashedul Islam Rony"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="25dp"></TextView>



    </LinearLayout>

    <GridLayout
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/talha"
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="170dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Abu Talha"
                android:layout_width="100dp"
                android:layout_height="25dp"></TextView>
        </LinearLayout>
        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/atik"
                android:layout_gravity="center_horizontal"
                android:layout_width="170dp"
                android:layout_height="170dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Atikur Rahman"
                android:layout_width="140dp"
                android:layout_height="25dp"></TextView>

        </LinearLayout>

        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/toli"
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="170dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Israt Jahan"
                android:layout_width="120dp"
                android:layout_height="25dp"></TextView>
        </LinearLayout>
        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/munna"
                android:layout_gravity="center_horizontal"
                android:layout_width="170dp"
                android:layout_height="170dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Mohimenol Munna"
                android:layout_width="180dp"
                android:layout_height="25dp"></TextView>

        </LinearLayout>

    </GridLayout>



</LinearLayout>